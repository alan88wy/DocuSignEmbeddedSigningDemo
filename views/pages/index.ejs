<% include ../partials/genericHead %>

<div id="index-page">
  <h3>Membership Sign Up Page </h3>
  <p>After entering your details in this membership SignUp, you will be presented with a Membership Application form for you to sign. </p>

  <form class="eg" action="/sign" method="post" data-busy="form">
    <div class="form-group">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" id="firstName" placeholder="Your First Name" name="firstName"
               required>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" id="lastName" placeholder="Your Last Name" name="lastName"
               required>
      </div>
      <div class="form-group">
        <label for="address">Address :</label>
        <input type="text" class="form-control" id="address" placeholder="Your Address" name="address1"
               required>
        <input type="text" class="form-control" id="address"  name="address2">
        <input type="text" class="form-control" id="address"  name="address3">
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="tel" class="form-control" id="phone" placeholder="Phone No" name="signerPhone"
               required>
      </div>
      <label for="signerEmail">Email Address</label>
      <input type="email" class="form-control" id="signerEmail" name="signerEmail"
             aria-describedby="emailHelp" placeholder="pat@example.com" required
      >
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>

    <!-- anchor-js is only for the index page -->
